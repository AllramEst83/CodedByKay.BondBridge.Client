<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CodedByKay.BondBridge.Client.Pages.AccountDetailsPage"
             xmlns:viewmodel="clr-namespace:CodedByKay.BondBridge.Client.ViewModels"
             Title="Konto">


    <VerticalStackLayout Padding="20" Spacing="25" x:DataType="viewmodel:AccountDetailsViewModel">

        <Label HorizontalOptions="Center" Text="{Binding UserMessage}" Padding="0"/>

        <!-- Logout Button -->
        <Frame CornerRadius="20" Padding="0">
            <Button Text="Logga ut" Command="{Binding LogoutCommand}" />
        </Frame>
    </VerticalStackLayout>
</ContentPage>